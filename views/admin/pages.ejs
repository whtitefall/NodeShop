<%- include("../layouts/adminheader.ejs") %>

<h2 class="page-title">pages</h2>
<a href="/admin/pages/add-page" class="btn btn-primary">Add new page </a>

<table class="table table-stripted sorting">
  <thead>
    <tr class="home">
      <th>Title</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
      <% pages.forEach(page => { %>
          <tr id="id_<%= page._id %>" class="<%= page.slug %>">
            <td>  <%= page.title %>     </td>
            <td> <a href="/admin/pages/edit-page/<%= page.slug %>">  Edit </td>
                <% if (page.slug == "home") { %>
                    <td></td>
                <% }else{ %>
                    <td> <a href="/admin/pages/edit-page/<%= page._id %>">  Delete </td>
                <% }%>

        </tr>
          <% }); %>
  </tbody>
</table>
<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
<script>
    $('tbody').sortable({

        items:"tr:not('.home')",
        placeholder: "ui-state-highlight",
        update : function(){
            var ids = $('tbody').sortable('serialize')
            var url = "/admin/pages/reorder-pages"

            $.post(url,ids)
        }
    })
</script>
<%- include("../layouts/adminfooter.ejs") %>
